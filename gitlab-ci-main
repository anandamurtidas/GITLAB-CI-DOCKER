stages:
  - build
  - deploy

variables:
  DEV_IMAGE: $CI_REGISTRY_DEV_IMAGE$CI_PROJECT_NAME:$CI_COMMIT_SHORT_SHA
  STAGE_IMAGE: $CI_REGISTRY_STAGE_IMAGE$CI_PROJECT_NAME:$CI_COMMIT_SHORT_SHA
  PROD_IMAGE: $CI_REGISTRY_PROD_IMAGE$CI_PROJECT_NAME:$CI_COMMIT_SHORT_SHA
  RELEASE: $CI_REGISTRY_PROD_IMAGE$CI_PROJECT_NAME:latest


build_chiken-express:
  stage: build
  tags:
    - build-ftech
  before_script:
    - docker login -u $CI_REGISTRY_USER -p $CI_REGISTRY_PASSWORD https://dstorage.multidev.uz/
  script:
    - docker build -f Dockerfile -t $DEV_IMAGE .
    - docker push $DEV_IMAGE
  only:
  - chiken-express


deploy_chiken-express:
  image: alpine:latest
  stage: deploy
  tags:
    - deploy-ftech
  script:
    - apk update && apk add openssh-client openssl
    - echo "$ID_RSA" | tr -d '\r' > id_rsa
    - chmod 600 id_rsa
    - ssh -i id_rsa -o StrictHostKeyChecking=no $SERVER_USER@$SERVER_IP "docker pull $DEV_IMAGE"
    - ssh -i id_rsa -o StrictHostKeyChecking=no $SERVER_USER@$SERVER_IP "docker container rm -f chiken-express || true"
    - ssh -i id_rsa -o StrictHostKeyChecking=no $SERVER_USER@$SERVER_IP "docker run -d --restart=always -p 172.16.150.120:6056:8080 --env-file /root/chiken-express/config.env --name chiken-express $DEV_IMAGE"

  only:
    - chiken-express


  after_script:
    - rm -f id_rsa
